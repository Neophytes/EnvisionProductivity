<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <link.fls.SwipeStack
            android:id="@+id/swipeStack1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <link.fls.SwipeStack
            android:id="@+id/swipeStack2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:padding="10dp"
            android:layout_alignTop="@+id/swipeStack1"
            android:layout_alignLeft="@+id/swipeStack4"
            android:layout_alignStart="@+id/swipeStack4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <link.fls.SwipeStack
            android:id="@+id/swipeStack3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <link.fls.SwipeStack
            android:id="@+id/swipeStack4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:padding="10dp"
            android:layout_alignTop="@+id/swipeStack3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</LinearLayout>